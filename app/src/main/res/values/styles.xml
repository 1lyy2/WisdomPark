<resources>

    <style name="BaseAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="actionBarStyle">@style/MyActionStyle</item>
        <item name="android:windowBackground">@color/common_background</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/color_666666</item>
        <item name="actionMenuTextColor">@android:color/white</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/BaseAppTheme">
    </style>

    <!-- 定义ActionBar -->
    <style name="MyActionStyle" parent="@style/Widget.AppCompat.ActionBar">
        <item name="background">@color/common_title_background</item>
        <item name="titleTextStyle">@style/ActionBarTitleTextStyle</item>
    </style>
    <!-- ActionBar的title字体 -->
    <style name="ActionBarTitleTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/common_title_text</item>
        <item name="android:textSize">@dimen/_33px</item>
    </style>
    <!--闪屏页的-->
    <style name="ThemeSplash" parent="Theme.AppCompat.Light.NoActionBar">
        <!--这一行是主要代码,其他看情况自己加-->
        <item name="android:windowBackground">@mipmap/ic_launcher</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="popupwindow_anim_style">
        <!-- 指定显示的动画xml -->
        <item name="android:windowEnterAnimation">@anim/show_from_bottom</item>
        <!-- 指定消失的动画xml -->
        <item name="android:windowExitAnimation">@anim/hide_to_bottom</item>
    </style>
    <style name="ToolBarTitleText" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">#ffffffff</item>
        <item name="android:textSize">@dimen/_36px</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--普通按钮。圆角，蓝色底-->
    <style name="commom_btn_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">@dimen/_20px</item>
        <item name="android:layout_marginLeft">@dimen/_20px</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_28px</item>
        <item name="android:background">@drawable/recharge_shape</item>
    </style>

</resources>
