<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_20px"
    android:background="@color/white"
    app:cardCornerRadius="@dimen/_18px"
    app:elevation="@dimen/_1px">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_180px"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/lin_left_my"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="@dimen/_20px"
            android:layout_marginTop="@dimen/_20px"
            android:orientation="vertical"
            android:paddingLeft="@dimen/_20px">

            <TextView
                android:id="@+id/tv_reserve_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="桂A88888"
                android:textSize="@dimen/_28px"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_reserve_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10px"
                android:text="江南万达广场"
                android:textSize="@dimen/_26px" />

            <TextView
                android:id="@+id/tv_reserve_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10px"
                android:text="2018.8.16 14:00:00-2018.08.16 16:00:00"
                android:textSize="@dimen/_26px" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rel_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="@dimen/_20px"
                android:orientation="horizontal"
                android:paddingRight="@dimen/_10px">

                <TextView
                    android:id="@+id/tv_reserve_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="莫女士"
                    android:textSize="@dimen/_28px" />

                <TextView
                    android:id="@+id/tv_reserve_userphone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/_20px"
                    android:text="187775354664"
                    android:textSize="@dimen/_28px" />
            </LinearLayout>
        </RelativeLayout>

        <Button
            android:id="@+id/btn_reserve_cancel"
            android:layout_width="@dimen/_180px"
            android:layout_height="@dimen/_80px"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="@dimen/_20px"
            android:layout_marginRight="@dimen/_10px"
            android:layout_marginTop="@dimen/_10px"
            android:background="@drawable/reserve_cacel_shape"
            android:text="取消预约"
            android:textSize="@dimen/_28px" />
    </RelativeLayout>
</android.support.v7.widget.CardView>