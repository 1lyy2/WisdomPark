<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/lin_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_marginTop="@dimen/_10px"
        android:layout_marginBottom="@dimen/_10px"
        android:layout_alignParentRight="true">
        <TextView
            android:id="@+id/tv_pay_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/_5px"
            android:textSize="@dimen/_28px"
            android:textColor="@color/commom_text_color"
            android:gravity="center"
            android:text="￥6.00"/>
        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_26px"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/_5px"
            android:layout_marginTop="@dimen/_5px"
            android:text="3小时7分"/>
        <TextView
            android:id="@+id/tv_topay"
            android:layout_width="@dimen/_150px"
            android:layout_height="@dimen/_60px"
            android:textSize="@dimen/_28px"
            android:layout_marginTop="@dimen/_5px"
            android:gravity="center"
            android:textColor="@color/commom_text_color"
            android:text="去缴费"
            android:background="@drawable/wait_pay_shape"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_10px"
        android:layout_marginBottom="@dimen/_10px"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/lin_right"
        android:layout_alignParentLeft="true">
        <LinearLayout
            android:layout_width="@dimen/_130px"
            android:layout_height="@dimen/_130px"
            android:background="@drawable/common_shape_oval">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="@dimen/_30px"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="P"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/_10px"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_pay_carnumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="@dimen/_28px"
                android:text="桂A88888"/>
            <TextView
                android:id="@+id/tv_pay_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_26px"
                android:layout_marginTop="@dimen/_5px"
                android:text="江南万达"/>
            <TextView
                android:id="@+id/tv_pay_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_26px"
                android:layout_marginTop="@dimen/_5px"
                android:text="2018.9.19 14:30"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>