<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.MeNeedParkingActivity">
    <include layout="@layout/common_tool_bar" />
    <com.ogaclejapan.smarttablayout.SmartTabLayout
        android:id="@+id/my_parking_smart"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="#ffffff"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_50px"
        android:layout_gravity="center"
        app:stl_defaultTabBackground="?attr/selectableItemBackground"
        app:stl_customTabTextLayoutId="@layout/custom_tab_parking"
        app:stl_customTabTextViewId="@id/custom_text_parking"
        app:stl_indicatorGravity="bottom"
        app:stl_indicatorWidth="auto"
        app:stl_indicatorInterpolation="smart"
        app:stl_dividerColor="#00000000"
        app:stl_dividerThickness="0dp"
        app:stl_distributeEvenly="true"
        app:stl_indicatorAlwaysInCenter="false"
        app:stl_indicatorWithoutPadding="true"
        app:stl_indicatorInFront="false"
        app:stl_clickable="true"
        app:stl_titleOffset="auto_center"
        android:paddingBottom="1dp"
        android:paddingLeft="@dimen/_10px"
        android:paddingRight="@dimen/_10px"
        />
    <android.support.v4.view.ViewPager
        android:id="@+id/parking_coupon"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>