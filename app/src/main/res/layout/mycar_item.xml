<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <android.support.v7.widget.CardView
        tools:targetApi="lollipop"
        android:id="@+id/mycar_cardview"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_150px"
        android:layout_marginLeft="@dimen/_10px"
        android:layout_marginRight="@dimen/_10px"
        android:layout_marginBottom="@dimen/_10px"
        android:layout_marginTop="@dimen/_10px"
        android:clickable="true"
        android:background="@color/white"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="@dimen/_15px"
        app:cardUseCompatPadding="true"
        app:cardPreventCornerOverlap="false">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center">
            <TextView
                android:id="@+id/tv_mycar_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/_10px"
                android:layout_centerVertical="true"
                android:textSize="@dimen/_30px"
                android:textStyle="bold"
                android:text="桂A8888"/>
            <Button
                android:id="@+id/btn_del_mycar"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_80px"
                android:textColor="@color/commom_text_color"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/_10px"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="删除"
                android:background="@drawable/register_shape"
                android:textSize="@dimen/_28px"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>