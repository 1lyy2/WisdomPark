<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_10px"
    app:cardCornerRadius="@dimen/_18px"
    app:elevation="@dimen/_1px">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="@dimen/_10px">

        <LinearLayout
            android:id="@+id/lin_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/_20px"
            android:layout_centerVertical="true"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="街道名称："
                android:textSize="@dimen/_28px" />

            <TextView
                android:id="@+id/tv_parking_streetname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10px"
                android:text="朝阳街道"
                android:textColor="@color/commom_text_color"
                android:textSize="@dimen/_30px" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10px"
                android:orientation="horizontal"
                >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="泊车编号："
                android:textSize="@dimen/_28px" />

            <TextView
                android:id="@+id/tv_parking_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10px"
                android:text="GX12800"
                android:textColor="@color/commom_text_color"
                android:textSize="@dimen/_30px" />
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/lin_left">

            <TextView
                android:id="@+id/tv_order"
                android:layout_width="@dimen/_180px"
                android:layout_height="@dimen/_80px"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginRight="@dimen/_20px"
                android:background="@drawable/btn_register_shape"
                android:gravity="center"
                android:text="预约"
                android:textSize="@dimen/_28px" />
        </RelativeLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>