<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#88000000">

    <LinearLayout
        android:id="@+id/lin_pay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_80px">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="确认付款"
                android:textSize="@dimen/_28px" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1px"
                android:layout_alignParentBottom="true"
                android:background="@color/common_spite_color" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_120px">

            <TextView
                android:id="@+id/tv_pay_money_pop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_20px"
                android:text="￥6.0"
                android:textSize="@dimen/_30px"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/_20px"
                android:layout_marginTop="@dimen/_20px"
                android:text="订单消息"
                android:textSize="@dimen/_28px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/_20px"
                android:layout_marginTop="@dimen/_20px"
                android:text="待缴车费"
                android:textSize="@dimen/_28px" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1px"
            android:layout_alignParentBottom="true"
            android:layout_margin="@dimen/_20px"
            android:background="@color/common_spite_color" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_80px"
            android:gravity="center"
            android:text="请选择付款方式"
            android:textSize="@dimen/_28px" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/paytype_recycle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/_20px"
            android:paddingRight="@dimen/_20px"
        />

        <TextView
            android:id="@+id/tv_gopay"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_80px"
            android:layout_marginTop="@dimen/_50px"
            android:layout_marginLeft="@dimen/_20px"
            android:layout_marginRight="@dimen/_20px"
            android:background="@drawable/btn_register_shape"
            android:gravity="center"
            android:textSize="@dimen/_28px"
            android:textColor="@color/white"
            android:layout_marginBottom="@dimen/_50px"
            android:text="立即付款"/>

    </LinearLayout>
</RelativeLayout>