<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linear_search"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="@color/common_title_background"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:gravity="center"
    android:orientation="horizontal"
    android:paddingRight="@dimen/_15px">

    <ImageView
        android:id="@+id/img_return"
        android:layout_width="wrap_content"
        android:paddingLeft="@dimen/_30px"
        android:paddingRight="@dimen/_25px"
        android:layout_height="match_parent"
        android:src="@drawable/all_back" />
    <View
        android:id="@+id/no_view"
        android:layout_width="@dimen/_20px"
        android:layout_height="match_parent"
        android:visibility="gone"></View>
    <RelativeLayout
        android:id="@+id/linea_search_edit"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="@dimen/_65px"
        android:background="@drawable/goods_list_search_bar_bg"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/_10px">
        <EditText
            android:id="@+id/edit_search"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableLeft="@drawable/search"
            android:drawablePadding="@dimen/_20px"
            android:layout_centerVertical="true"
            android:background="@null"
            android:ems="10"
            android:gravity="center_vertical"
            android:hint="请输入地点、路段名称"
            android:imeOptions="actionSearch"
            android:paddingLeft="@dimen/_5px"
            android:singleLine="true"
            android:textColor="#666666"
            android:textSize="@dimen/_28px"
            android:paddingRight="@dimen/_63px"
            android:textColorHint="#999999" />

    </RelativeLayout>
    <TextView
        android:id="@+id/textview_search"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@+id/edit_search"
        android:clickable="true"
        android:paddingLeft="@dimen/_22px"
        android:paddingRight="@dimen/_15px"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:textSize="@dimen/_35px"
        android:textColor="#999999"
        android:gravity="center_vertical"
        android:text="搜索" />
</LinearLayout>