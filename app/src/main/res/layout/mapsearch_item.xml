<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_100px"
    android:background="@color/white"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/lin_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:paddingLeft="@dimen/_20px"
        android:paddingRight="@dimen/_10px"
        android:layout_alignParentRight="true">
        <TextView
            android:id="@+id/tv_search_range"
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/_10px"
            android:layout_height="wrap_content"
            android:lines="1"
            android:ellipsize="end"
            android:text="544KM"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:paddingLeft="@dimen/_20px"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/lin_right"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_search_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:ellipsize="end"
            android:text="广西南宁市"/>
        <TextView
            android:id="@+id/tv_search_name_detail"
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/_10px"
            android:layout_height="wrap_content"
            android:lines="1"
            android:ellipsize="end"
            android:text="广西壮族自治区dadadasdadaadaadahdadhahdasdaddasdh"/>
    </LinearLayout>

</RelativeLayout>