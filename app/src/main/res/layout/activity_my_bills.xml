<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.MyBillsActivity">
    <include layout="@layout/common_tool_bar" />
    <com.ogaclejapan.smarttablayout.SmartTabLayout
        android:id="@+id/tab_bills"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_80px"
        app:stl_defaultTabBackground="?attr/selectableItemBackground"
        app:stl_customTabTextLayoutId="@layout/custom_tab"
        app:stl_customTabTextViewId="@id/custom_text"
        app:stl_indicatorGravity="bottom"
        app:stl_indicatorColor="@color/commom_text_color"
        app:stl_indicatorThickness="3dp"
        app:stl_indicatorWidth="auto"
        app:stl_indicatorCornerRadius="1.5dp"
        app:stl_indicatorInterpolation="smart"
        app:stl_underlineColor="@color/color_ebebeb"
        app:stl_underlineThickness="@dimen/_1px"
        app:stl_dividerColor="#00000000"
        app:stl_dividerThickness="0dp"
        app:stl_distributeEvenly="true"
        app:stl_indicatorAlwaysInCenter="false"
        app:stl_indicatorWithoutPadding="true"
        app:stl_indicatorInFront="false"
        app:stl_clickable="true"
        app:stl_titleOffset="auto_center"
        android:paddingBottom="1dp"
        android:paddingLeft="@dimen/_10px"
        android:paddingRight="@dimen/_10px"
        />
    <android.support.v4.view.ViewPager
        android:id="@+id/vp_bills"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>